{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "#{IdentityDb-ConnectionString}#"
  },
  "JwtSettings": {
    "Secret": "#{JwtSettings-SecretKey}#",
    "Issuer": "Body4uHUB.Identity",
    "Audience": "Body4uHUB",
    "ExpirationMinutes": 60
  },
  "SeedData": {
    "AdminUserEmail": "#{SeedData-AdminUserEmail}#",
    "AdminUserPassword": "#{SeedData-AdminUserPassword}#",
    "AdminUserFirsName": "Body4uHUB",
    "AdminUserLastName": "Admin",
    "AdminRoleName": "Administrator",
    "UserRoles": [
      "Trainer",
      "User"
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "#{Cors-AllowedOrigins}#"
    ]
  },
  "MassTransit": {
    "Host": "#{RabbitMQ-HostName}#",
    "VirtualHost": "/",
    "Username": "#{RabbitMQ-UserName}#",
    "Password": "#{RabbitMQ-Password}#",
    "RetryCount": 5,
    "RetryIntervalSeconds": 5,
    "OutboxQueryMessageLimit": 100,
    "OutboxQueryDelaySeconds": 1
  },
  "EmailSettings": {
    "SmtpServer": "#{EmailSettings-SmtpServer}#",
    "SmtpPort": 587,
    "FromEmail": "#{EmailSettings-FromEmail}#",
    "FromName": "Body4uHUB",
    "Username": "#{EmailSettings-Username}#",
    "Password": "#{EmailSettings-Password}#",
    "EnableSsl": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/identity-service-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}